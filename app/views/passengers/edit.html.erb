<%= simple_form_for(current_user, as: :passenger, url: passenger_path(current_user), method: :put, data: { turbo: false }) do |f| %>
  <%= render partial: "shared/form_errors", locals: { model: current_user } %>
  <%= f.error_notification %>
  <%= f.input :name, placeholder: "Sis. Luz" %>
  <%= f.input :phone, as: :tel, placeholder: "778 XXX XXXX" %>
  <%= f.button :submit, 'Create Passenger Account' %>
<% end %>

